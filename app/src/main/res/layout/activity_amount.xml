<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/amount_balance"
            android:layout_width="wrap_content"
            android:padding="12sp"
            android:text="Account Balance = Rs.0"
            android:textSize="22dp"
            android:textColor="#211f1f"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:padding="12sp"
            android:text="---------------------------------------------------------------------"
            android:textColor="#211f1f"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:padding="9dp"
            android:text="Add Money"
            android:textSize="18dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:layout_gravity="center"
            android:textColor="#464343"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:paddingStart="123dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/enter_amount_id"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:padding="8sp"
                android:layout_gravity="center"
                android:hint="Rs.0"
                android:textSize="19sp"
                android:textColor="#000000"
                android:inputType="number"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />
            <ImageView
                android:padding="8sp"
                android:layout_width="match_parent"
                android:src="@drawable/ic_backspace"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:padding="9dp"
            android:text="to Wallet Account"
            android:textSize="18dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:layout_gravity="center"
            android:textColor="#464343"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:onClick="payment"
                android:layout_width="wrap_content"
                android:layout_margin="12sp"
                android:text="Ok"
                android:textColor="#ffff"
                android:background="#4242d1"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/amount_progress_bar_id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>